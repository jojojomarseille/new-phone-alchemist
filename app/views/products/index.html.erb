      <img src="https://www.xbxparadise.fr/public/uploads/shop/553fbb4218f2c.jpeg" class="card-img-top" alt="...">

      <div class="card-body">
        <h5 class="card-title"><a href="/products/<%= un_produit.id %>"><%= un_produit.title%></a></h5>
        <p class="card-text"><%= truncate un_produit.subtitle, length: 25 %></p>
        <p class="card-price"><%= un_produit.price%> â‚¬</p>
        <a href="/products/<%= un_produit.id %>" class="btn btn-primary">voire</a>
        <%= button_to "ajouter au panier", line_items_path(product_id: un_produit), class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>
  </div>
</div>




